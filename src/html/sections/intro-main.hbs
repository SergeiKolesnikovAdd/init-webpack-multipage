<section
  class="first-section main-padding preloader-section"
  data-header-color="black"
>
  <div class="first-section__title-wrapper">
    <div class="first-section__title-wrapper-inner">
      <button class="first-section__play-button play-button">
        {{> play-button-border.svg}}
        <div
          class="play-button__text text text_type_desc
                 text_color_gray preloader-opacity
                 preloader-appearance-step-2-0"
        >
          Showreel
        </div>
        {{> play-button-inner.svg class-name="play-button__inner preloader-opacity preloader-appearance-step-2-0"}}
      </button>
      <h1
        class="first-section__title text text_color_black text_type_h1 text_transform_uppercase"
      >
        {{> intro-main-mobile}}
        {{> intro-main-desktop class-names="first-section__title-inner first-section_desktop"}}
      </h1>
    </div>
  </div>
  <div class="first-section__advantages advantages text_transform_uppercase">
    {{> advantage-item
    class-names="advantages__item text text_color_black
                 text_type_common preloader-opacity
                 preloader-appearance-step-2-0"
    text-1="более 70 коммерческих"
    text-2="проектов"}}
    {{> advantage-line-desktop.svg}}
    {{> advantage-item
    class-names="advantages__item text text_color_black
                 text_type_common preloader-opacity
                 preloader-appearance-step-2-1"
    text-1="20 международных"
    text-2="наград"}}
    {{> advantage-line-desktop.svg}}
    {{> advantage-item
    class-names="advantages__item text text_color_black
                 text_type_common preloader-opacity
                 preloader-appearance-step-2-2"
    text-1="4 года"
    text-2="экспертизы"}}
    {{> advantage-line-desktop.svg}}
    {{> advantage-item
    class-names="advantages__item text text_color_black
                 text_type_common preloader-opacity
                 preloader-appearance-step-2-3"
    text-1="более 12 языков"
    text-2="программирования"}}
    {{> advantage-line-mobile.svg 
    class-names="advantages__line advantages__line_mobile advantages__line_horizontal"
    viewBox="0 0 296 2"}}
    {{> advantage-line-mobile.svg 
    class-names="advantages__line advantages__line_mobile advantages__line_vertical"
    viewBox="0 0 2 132"}}
  </div>
</section>